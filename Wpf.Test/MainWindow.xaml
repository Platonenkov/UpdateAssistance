<Window x:Class="Wpf.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:ZoomBorder x:Name="border" ClipToBounds="False" IsManipulationEnabled="True" RenderTransformOrigin="0.5, 0.5">
            <local:ZoomBorder.RenderTransform>
                <RotateTransform Angle="0" CenterX="0" CenterY="0" />
            </local:ZoomBorder.RenderTransform>

            <Image
                MaxWidth="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}"
                MaxHeight="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualHeight}"
                Stretch="Uniform"
                HorizontalAlignment="Center"  >
                <Image.Source>
                    <FormatConvertedBitmap Source="D:\test.png"
                                           DestinationFormat="Gray32Float" />
                </Image.Source>
            </Image>
        </local:ZoomBorder>
    </Grid>
</Window>
